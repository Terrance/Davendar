<!DOCTYPE html>
<html>
  <head>
    <title>{% block title %}{% endblock %}{% if self.title() %} &mdash; {% endif %}Davendar</title>
    <style>
      html {
        height: 100%;
      }
      body {
        margin: 0;
        height: 100%;
        font-family: "Segoe UI";
        font-size: 0.8rem;
      }
      .nav {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 1rem;
        padding: 0.25rem;
        display: flex;
        border-bottom: 1px solid #aaa;
      }
      .nav ul {
        display: inline-block;
        margin-top: 0;
        margin-bottom: 0;
        padding-left: 0;
        list-style-type: none;
      }
      .nav form {
        flex: 1;
        margin: 0 0.5rem;
      }
      .nav form input {
        width: 100%;
        padding: 0;
        text-align: center;
        border: 0;
      }
      .nav li {
        display: inline;
      }
      .nav a {
        text-decoration: none;
      }
      .content {
        position: absolute;
        bottom: 0;
        width: 100%;
        height: calc(100% - 1.5rem - 1px);
        overflow-x: hidden;
        overflow-y: auto;
      }
      .month {
        width: 100%;
        height: 100%;
        display: grid;
        grid-template-columns: repeat(7, 1fr);
        grid-auto-rows: 1fr;
        grid-gap: 1px;
        background-color: #aaa;
      }
      .month .day {
        min-height: 0;
        position: relative;
        padding: 0.25rem;
        background-color: #eee;
      }
      .month .day::-webkit-scrollbar {
        display: none;
      }
      .month .day .date {
        position: absolute;
        top: 0;
        right: 0;
        background-color: #ddd;
        border-left: 1px solid #aaa;
        border-bottom: 1px solid #aaa;
      }
      .month .day .date a {
        display: inline-block;
        padding: 0.25rem;
        color: #000;
        text-decoration: none;
      }
      .month .day .agenda {
        width: 100%;
        height: 100%;
        overflow: scroll;
        -ms-overflow-style: none;
        scrollbar-width: none;
        list-style-type: none;
      }
      .month .day.current {
        background-color: #fff;
      }
      .month .day.current .date {
        background-color: #eee;
      }
      .month .day.today {
        background-color: #def;
      }
      .month .day.today .date {
        background-color: #adf;
      }
      .week {
        display: grid;
        width: 100%;
        height: 100%;
        grid-template-columns: auto auto 1fr;
        grid-template-rows: repeat(7, 1fr);
        grid-gap: 1px;
        background-color: #aaa;
      }
      .week div {
        background-color: #fff;
      }
      ul.agenda, ul.graph {
        position: relative;
        margin-top: 0;
        margin-bottom: 0;
        padding-left: 0;
        list-style-type: none;
      }
      ul.graph li {
        position: absolute;
        text-overflow: ellipsis;
      }
      ul.graph:not(.multiline) li {
        overflow: hidden;
      }
      ul.graph li span {
        white-space: nowrap;
        margin: 0 -0.25rem;
        padding: 0 0.25rem;
      }
      ul.graph li .bar {
        display: inline-block;
        width: 100%;
        height: 0;
        border-bottom: 2px solid;
      }
      ul.graph li:hover {
        overflow: visible;
      }
      ul.graph li:hover span {
        position: relative;
        z-index: 1;
        background-color: #fff;
      }
    </style>
  </head>
  <body>
    <div class="nav">
      <ul>
        {% block nav %}{% endblock %}
      </ul>
      <form method="POST" action="{{ url("create") }}">
        <input type="text" name="text" placeholder="Add a new event...">
        <input type="hidden" name="route" value="{{ request.match_info.route.name }}">
      </form>
      <ul>
        <li><a href="{{ url("month", year=now.year, month=now.month) }}">Month</a></li>
        <li><a href="{{ url("week", year=now_week.year, week=now_week.week) }}">Week</a></li>
        <li><a href="{{ url("day", year=now.year, month=now.month, day=now.day) }}">Day</a></li>
      </ul>
    </div>
    <div class="content">
      {% block content %}{% endblock %}
    </div>
  </body>
</html>
